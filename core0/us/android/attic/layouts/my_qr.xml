<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:clickable="true"
    android:id="@+id/contentX"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <EditText
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/endpointlabel"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:background="@color/cardview_light_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/header"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/pic"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:src="@raw/loading_role_img"
            android:visibility="visible" />

        <EditText
            android:id="@+id/qrlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/endpointlabel"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:background="@color/cardview_light_background"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/qrtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/endpointlabel"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="16sp"
        android:background="@color/cardview_light_background"
        android:inputType="textMultiLine"
        android:lines="3"
        android:minLines="2"
        android:maxLines="4"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:selectAllOnFocus="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="------------------------------------"
        android:textAlignment="center"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:visibility="visible"
        android:adjustViewBounds="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="------------------------------------"
        android:textAlignment="center"
        android:textSize="16sp"
        />


    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="This is your QR code. Other users can scan it to start a session with you."
        android:textAlignment="center"
        android:textSize="16sp"
        android:background="@color/cardview_light_background"
        />

    <TextView
        android:id="@+id/info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="&lt;-&gt; swipe for more"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="@color/cardview_light_background"
        />


</LinearLayout>

