<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/papirus"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:orientation="vertical"
    >
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="24dp"
             />
        <TextView
            android:id="@+id/ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
             />
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
             />
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14dp"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="right|center_vertical"
            >
            <ImageView
                android:id="@+id/conn_ico"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="left|center_vertical"
                android:src="@raw/conn_ico_off"
            />
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
            />
            <Switch
                android:id="@+id/poweron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="Power"
                android:theme="@style/switch_theme"
                android:gravity="right|center_vertical"
                />
            <us.cash.button
                android:id="@+id/hmibutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:gravity="right|center_vertical"
                app:custom_src="raw/gear"
                >
                <include layout="@layout/button"/> 
            </us.cash.button>
            <us.cash.button
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                app:custom_src="raw/menu"
                >
                <include layout="@layout/button"/> 
            </us.cash.button>
            <us.cash.button
                android:id="@+id/trash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:layout_marginLeft="16dp"
                app:custom_src="raw/trash"
                >
                <include layout="@layout/button"/> 
            </us.cash.button>

        </LinearLayout>
</LinearLayout>

