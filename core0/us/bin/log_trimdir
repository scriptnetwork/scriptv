t0=$1
t1=$2
dir=$3

if [ "_$3" == "_" ]; then
    echo "log_trimdir <t0> <t1> <dir>"
    echo "dir:"
    ls -1 /var/log/us
    exit 1
fi

    ddir=/var/log/us/${dir}_trimmed_$1_$2
    mkdir -p $ddir

    for i in `find /var/log/us/$dir -type f`; do
        logtool trim $1 $2 $i $ddir
    done
