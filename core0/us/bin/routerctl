cmd=$1
if [ "_$cmd" == "_" ]; then
    echo "<show|mapports>"
    exit 1
fi

as=`upnpc -s | grep "Local LAN\|ExternalIPAddress" | sort | awk '{ print $NF }'`
wan=`echo $as | awk '{print $1}'`
lan=`echo $as | awk '{print $2}'`

if [ "$cmd" == "show" ]; then
    echo "WAN $wan"
    echo "LAN $lan"
    upnpc -l
fi

function map {
 port=$1
 echo "mapping port $port"
 upnpc -a $lan $port $port TCP
}

if [ "$cmd" == "mapports" ]; then
    map 16671
    map 16672
    map 16673
fi

