if [[ -f .cbs/config ]]; then
    . .cbs/config
else
	echo "KO 8585 Missing .cbs/config."
	exit 1
fi

brand=`find $brands -maxdepth 1 -mindepth 1 -type d | sed "s~$brands/~~" | xargs | awk '{ print $1 }'`
echo "using $brand"
bin/10_make_build_jobs --batch --release --only_deps $brand

exit 0

