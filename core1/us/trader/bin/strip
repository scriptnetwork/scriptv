#to be excuted as bin/strip - of/trader/bin uses a copy of it, keem them in sync
dir=$1

if [ "_$dir" == "_" ]; then
    echo "$0 <src-code dir>"
    exit 1
fi

pushd $dir > /dev/null
    if [ -d $dir/.git ]; then
        echo "Warning 40292 Not stripping controlled files"
        exit 1
    fi
popd > /dev/null

function dostrip {
    dir=$1
    type=$2
    echo -n "stripping $type files "
    for f in `find $dir -type f -name "*.$type"`; do
        #echo "stripping $f"
        echo -n "."
        grep -v "\-\-strip" $f | sponge $f
    done
    echo ""
}

dostrip $dir "cpp"
dostrip $dir "in"
dostrip $dir "java"

exit 0

